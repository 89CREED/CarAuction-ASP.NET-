@model AutaCH_MD.DTOs.CarDTO;

<div class="delete-car d-flex flex-column align-items-center">
    <h1 class="mt-5">Delete Car</h1>

    <form asp-controller="Car" asp-action="DeleteCarConfirm" method="post" class="delete-form form-bg form-control mt-5 mb-5 p-5 d-flex flex-column">
        <div asp-validation-summary="ModelOnly" class="text-danger mt-2 fs-5 text-decoration-underline"></div>
        <div>
            <input type="hidden" asp-for="CarId" />
            <h2 class="text-center text-danger">Are you sure you want to delete this Car?</h2>
            <div class="text-white mt-4">
                <p><strong>Car ID:</strong> @Model.CarId</p>
                <p><strong>Start Auction:</strong> @Model.StartAuction</p>
                <p><strong>End Auction:</strong> @Model.EndAuction</p>
                <p><strong>Make:</strong> @Model.Make</p>
                <p><strong>Model:</strong> @Model.Model</p>
                <p><strong>Body:</strong> @Model.Body</p>
                <p><strong>Color:</strong> @Model.Color</p>
                <p><strong>Engine:</strong> @Model.Engine cm<sup>3</sup></p>
                <p><strong>Fuel:</strong> @Model.Fuel</p>
                <p><strong>Transmission:</strong> @Model.Transmission</p>
                <p><strong>Gears:</strong> @Model.Gears</p>
                <p><strong>Doors:</strong> @Model.Doors</p>
                <p><strong>Tires:</strong> @Model.Tires</p>
                <p><strong>Key:</strong> @Model.Key</p>
                <p><strong>Year:</strong> @Model.Year</p>
                <p><strong>Mileage:</strong> @Model.Mileage</p>
                <p><strong>Date and Time:</strong> @Model.DateTime</p>
                <p><strong>Is Active:</strong> @(Model.IsActive ? "Yes" : "No")</p>
            </div>
        </div>

        <div class="edit-btn d-flex flex-column align-items-center mt-5">
            <button type="submit" class="btn btn-light">Delete</button>
            <a asp-controller="Car" asp-action="CarsList" class="btn btn-light mt-3">Back</a>
        </div>
    </form>
</div>

