@model AutaCH_MD.DTOs.AdminUpdateUserDTO;

<div class="editPage-form d-flex flex-column align-items-center">
    <h1 class="mt-5">Delete User</h1>

    <form asp-controller="Admin" asp-action="DeleteUserConfirm" method="post" class="delete-form form-bg form-control mt-5 mb-5 p-5 d-flex flex-column">
        <div asp-validation-summary="ModelOnly" class="text-danger mt-2 fs-5 text-decoration-underline"></div>
        <div>
            <input type="hidden" asp-for="UserId" />
            <h2 class="text-center text-danger">Are you sure you want to delete this User?</h2>
            <div class="text-white mt-4">
                <p><strong>User ID:</strong> @Model.UserId</p>
                <p><strong>First Name:</strong> @Model.FirstName</p>
                <p><strong>Last Name:</strong> @Model.LastName</p>
                <p><strong>Country:</strong> @Model.Country</p>
                <p><strong>City:</strong> @Model.City</p>
                <p><strong>Postal Code:</strong> @Model.PostalCode</p>
                <p><strong>Street:</strong> @Model.Street</p>
                <p><strong>House Number:</strong> @Model.HouseNumber</p>
                <p><strong>Ap. Number:</strong> @Model.ApartmentNumber</p>
                <p><strong>Phone Number:</strong> @Model.PhoneNumber</p>
                <p><strong>Login:</strong> @Model.Login</p>
                <p><strong>Email:</strong> @Model.Email</p>
                <p><strong>Date and Time:</strong> @Model.DateTime</p>
                <p><strong>Is Active:</strong> @(Model.IsActive ? "Yes" : "No")</p>
            </div>
        </div>

        <div class="edit-btn d-flex flex-column align-items-center mt-5">
            <button type="submit" class="btn btn-light">Delete</button>
            <a asp-controller="Admin" asp-action="UsersList" class="btn btn-light mt-3">Back</a>
        </div>
    </form>
</div>

