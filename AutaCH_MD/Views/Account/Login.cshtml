@model AutaCH_MD.DTOs.UserDTO;

<div class="login-form d-flex flex-column align-items-center">
    <h1 class="mt-5">Login</h1>
    <form asp-action="Login" asp-controller="Account" method="post" class="form-control form-bg custom-width mt-5 p-5">
        <div class="form-group">
            <label asp-for="Login" class="form-label text-light">Username/Email</label>
            <input asp-for="Login" placeholder="Username/Email" class="form-control form-input"/>
            <span asp-validation-for="Login" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Password" class="form-label text-light">Password</label>
            <input asp-for="Password" type="password" placeholder="Password" class="form-control form-input"/>
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>
        <div class="login-btn d-flex flex-column align-items-center">
            <button type="submit" class="btn btn-light">LogIn</button>
            <label class="form-label text-light mt-3">No Account? <a href="Register">Create One!</a></label>
        </div>
    </form>
    <div asp-validation-summary="ModelOnly" class="text-danger mt-2 fs-5 text-decoration-underline"></div>
</div>
